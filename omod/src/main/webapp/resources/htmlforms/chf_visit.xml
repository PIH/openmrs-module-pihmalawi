                    </td>

                    <td>
                        <!-- Heart Rate -->
                        <obs conceptId="$heartRate" />
                    </td>

                    <td>
                        <!-- % SPO2 -->
                        <obs conceptId="$bloodOxygenSaturation" />
                    </td>

                    <!-- PND -->
                    <td style="text-align: left;">
                       <repeat with="['$raised','Increase'],['$lower','Decrease'],['$same','Same'],['$none','None']">
