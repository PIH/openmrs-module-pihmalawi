                        </obsgroup>
                    </repeat>
                </td>
            </tr>

            <tr>
                <th>ACE-I</th>
                <td>
                    <repeat with="['$enalapril ','ENAL'],['$captopril','CAPT'],['$lisinopril','LISIN']">
