            </tr>
            <tr>
                <!-- Weight -->
                <th>Weight</th>
                <td><obs conceptId="$weight" id="weightInput" showUnits="true" /></td>
            </tr>

            <tr>
                <th>Weight change</th>
                <td><obs conceptId="$wtChange" /></td>
            </tr>

             <tr>
                <th>Blood Pressure</th>
