<htmlform formUuid="1caa998f-2f21-4568-b319-0618f6733284" formName="ART Follow-up Testing"
          formEncounterType="4104867f-8f40-4273-bc42-a67958e599eb" formVersion="1.0">

    <macros>
        <macro key="serumGlucose" value="654a98b8-977f-11e1-8993-905e29aff6c1"/>
        <macro key="glucoseTestType" value="65711e3e-977f-11e1-8993-905e29aff6c1"/>
        <macro key="fastingTest" value="65711c2c-977f-11e1-8993-905e29aff6c1"/>
        <macro key="randomTest" value="65711d3a-977f-11e1-8993-905e29aff6c1"/>
        <macro key="cd4Count" value="656c327a-977f-11e1-8993-905e29aff6c1"/>
        <macro key="cd4Pct" value="6549db44-977f-11e1-8993-905e29aff6c1"/>
        <macro key="phqNineScore" value="e1bc7567-aec8-48b6-987e-b4a53d15787b"/>


    </macros>

    <!-- Flowsheet table view -->

    <ifMode mode="VIEW" include="true">
        <h4 style="font-style: italic;">
            <b>Follow-up testing (CD4,glucose,depression)</b>
            <span style="padding-left:50px;">Version 1.0</span>

            <span style="padding-left:50px;">
                <b style="padding-right:10px;">ARV Reg no:</b>
                <b>
                    <lookup complexExpression="#foreach( $id in $patientIdentifiers.get(&quot;ARV Number&quot;) ) $!id #end"/>
                </b>
            </span>
        </h4>
    <span style="display:none">
        <encounterProvider default="16576" />
        <span id="patientBirthdate"><lookup expression="patient.birthdate"/></span>
    </span> <!-- Set provider to a default as not used -->
        <table class="visit-table data-entry-table">
            <thead class="visit-table-header">
                <tr>
                    <th>Visit Date</th>
                    <th>CD4</th>
                    <th>BPS/FBS</th>
                    <th>PHQ score</th>
                </tr>
            </thead>
            <tbody class="visit-table-body">
                <tr class="visit-table-row">                    
                    <td class="nowrap visit-date">
                        <!-- Encounter Date -->
                        <encounterDate />
                    </td>

                    <!-- CD4 -->
                    <td>
                        <span class="left-cell">
                            <obs conceptId="$cd4Count" labelText="" />
                        </span>
                        <span class="right-cell">
                            <obs conceptId="$cd4Pct" labelText="" /> %
                        </span>
                    </td>

                    <!-- RBS/FBF-->
                    <td>
                        <!-- Serum Glucose -->
                        <obsreference conceptId="$serumGlucose"/><br/>
                        <obsreference conceptId="$glucoseTestType" answerConceptId="$fastingTest" style="checkbox"/>
                        <obsreference conceptId="$glucoseTestType" answerConceptId="$randomTest" style="checkbox"/>
                    </td>


                    <!-- PHQ 9 score -->
                    <td style="padding: 1px;" >
                        <obs conceptId="$phqNineScore" size="3"/>
                    </td>



                </tr>                                
            </tbody>
        </table>

    </ifMode>

    <!-- Data entry view -->
    <ifMode mode="VIEW" include="false">

        <h4 style="font-style: italic;">
            <b>Viral Load Test Results</b>
            <span style="padding-left:50px;">Follow-up testing (CD4,glucose,depression)</span>
            <span id="patientUuid" style="display:none"><lookup expression="patient.uuid"/></span>
            <span style="padding-left:50px;">
                <b style="padding-right:10px;">ARV Reg no:</b>
                <b>
                    <lookup complexExpression="#foreach( $id in $patientIdentifiers.get(&quot;ARV Number&quot;) ) $!id #end"/>
                </b>
            </span>
        </h4>

        <span style="display:none">
            <encounterProvider default="16576"/>
        </span> <!-- Set provider to a default as not used -->

        <table class="visit-edit-table">
        <table class="visit-table data-entry-table">
            <thead class="visit-table-header">
                <tr>
                    <th>Visit Date</th>
                    <th>CD4</th>
                    <th>BPS/FBS</th>
                    <th>PHQ score</th>
                </tr>
            </thead>
            <tbody class="visit-table-body">
                <tr>
                    <td><lookup complexExpression="#if($encounter) $ui.format($encounter.encounterDatetime) #else $ui.format($context.defaultEncounterDate) #end" />
                        <span id="visitDateError" class="error field-error" style="display:none;color: rgb(255, 0, 0);"></span>
                        <span style="display:none"><encounterDate id="visitDate" size="20" /></span>
                    </td>

                    <!-- CD4 -->
                    <td>
                        <span class="left-cell">
                            <obs conceptId="$cd4Count" labelText="" />
                        </span>
                        <span class="right-cell">
                            <obs conceptId="$cd4Pct" labelText="" /> %
                        </span>
                    </td>

                    <!--RBS/FBF-->
                    <td>
                        <obsreference conceptId="$serumGlucose" showUnits="true" /><br/><br/>
                        <obsreference conceptId="$glucoseTestType" answerConceptIds="$fastingTest,$randomTest" style="radio"/>
                    </td>


                    <!-- PHQ 9 Score-->
                    <td style="padding: 1px;" >
                        <obs conceptId="$phqNineScore" size="3"/>
                    </td>


                </tr>                               
            </tbody>
        </table>

        </table>

        <submit/>

    </ifMode>

</htmlform>
