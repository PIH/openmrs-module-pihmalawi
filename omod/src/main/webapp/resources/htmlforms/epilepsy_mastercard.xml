                                                <obs conceptId="{0}" labelText=""
                                                     style="radio" answerConceptIds="$yesAnswer,$noAnswer,$unknown"
                                                     answerLabels="Y,N,Unk"/>
                                            </td>
                                            <td>{1}</td>
                                        </repeat>
                                    </tr>
                                    <tr>
                                        <repeat with="['$postIcPoorVerbal','Poor verbal or cognitive skill'],
