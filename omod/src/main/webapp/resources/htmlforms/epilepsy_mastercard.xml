                            <td colspan="2"></td>
                            <td>
                                <b>Triggers</b>
                            </td>
                            <td>
                                <b>Complications</b>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="2">
                                <obs conceptId="$preIctalWarn" labelText=""
                                     style="radio" answerConceptIds="$yesAnswer,$noAnswer,$unknown"
                                     answerLabels="Y,N,Unk"/>
                                &amp;nbsp;&amp;nbsp;Pre-ictal warning
