    </macros>

    <span style="display:none">
        <encounterProvider default="16576" /><!-- Set provider to a default as not used -->
        <span id="patientBirthdate"><lookup expression="patient.birthdate"/></span>
    </span>
    <div>
        <h4 style="font-style: italic;">
            <b>NCD Patient Card</b>
            <b style="padding-left:50px;">Chronic Kidney Disease</b>
            <span style="padding-left:50px;">Version 1</span>

            <span style="padding-left:50px;">
                <b style="padding-right:10px;">
                    <encounterLocation id="mastercardLocation" tags="$nenoLocations"/>
                    <span style="padding-left:20px;">
                        Date: <encounterDate />
                    </span>
                </b>
            </span>
            <span style="padding-left:50px;">
                <b style="padding-right:10px;">Transfer-In Date: </b>
                <b>
                    <obs conceptId="$transferInDate" allowFutureDates="false"/>
                </b>
            </span>
            <span style="padding-left:50px;">
                <b style="padding-right:10px;">NCD Reg no: </b>
                <b>
                    <lookup complexExpression="#foreach( $id in $patientIdentifiers.get(&quot;Chronic Care Number&quot;) ) $!id #end" />
                </b>
            </span>
        </h4>
        <table class="data-entry-table">
            <tr style="border: none;">
                <td style="vertical-align:top;">
                    <h5>Patient / Guardian Details</h5>
                    <table>
                        <tr>
                            <td>Patient Name</td>
                            <td>
                                <lookup expression="patient.personName" />
                            </td>
                        </tr>
                        <tr>
                            <td>Sex, DOB</td>
                            <td>
                                <span class="left-cell">
                                    <lookup expression="patient.gender" />
                                </span>
                                <span class="right-cell">
                                    <lookup expression="patient.birthdate" />
                                    (Age: <lookup expression="patient.age"/>)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>Physical Address</td>
                            <td><!-- style="height:60px;"-->
                                <lookup complexExpression="#foreach( $addr in $patient.addresses) $!addr.getAddress1() $!addr.getCityVillage() $!addr.getStateProvince() $!addr.getCountyDistrict(), #end" />
                            </td>
                        </tr>
                        <tr>
                            <td>Patient Phone</td>
                            <td><obs conceptId="$patientPhone" size="10"/></td>
                        </tr>
                        <tr>
                            <td>Guardian Name</td>
                            <td>
                                <obs id="guardianNameField" conceptId="$guardianName" size="40"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Guardian Phone</td>
                            <td>
                                <obs conceptId="$guardianPhone" size="10"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Guardian relation to patient</td>
                            <td>
                                <obs conceptId="$relationToPatient" size="10" />
                            </td>
                        </tr>
                        <tr>
                            <td>Agrees to FUP</td>
                            <td>
                                <obs conceptId="$agreesToFollowup" style="radio" answerLabels="N,Y" answerConceptIds="$noAnswer,$yesAnswer" />
                            </td>
                        </tr>
                        <tr>
                            <td>CHW Name</td>
                            <td>
                              <lookup complexExpression="#foreach(${relationship} in ${relationshipList})
				#if( $velocityCount == 1 )
				          #if(${relationship.relationshipType.uuid} == 'eb567be2-fda1-4746-9d51-833de8a7e81f')
				                ${relationship.personA.personName}
				          #end
				#else
					  #if(${relationship.relationshipType.uuid} == 'eb567be2-fda1-4746-9d51-833de8a7e81f')
						&#44; ${relationship.personA.personName}
				          #end
				#end
                              #end "/>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="vertical-align:top;">
                    <h5>Patient Overview</h5>
                    <table>
                        <tr>
                            <th style="vertical-align:top;" align="left" rowspan="4">Presumed<br/>etiology</th>
                            <!-- CKD -->
                            <td data-toggle-source="ckd-dx" data-toggle-target="ckd-etiology-date" rowspan="4">
                                <obs conceptId="$ckdEtiology"  answerConceptId="$hypertensionDx" answerLabel="Hypertension"  style="checkbox" /><br />
                                <obs conceptId="$ckdEtiology"  answerConceptId="$diabetesDx" answerLabel="Diabetes"  style="checkbox" /><br />
                                <obs conceptId="$ckdEtiology"  answerConceptId="$ckdEtiHIV" answerLabel="HIV"  style="checkbox" /><br />
                                <obs conceptId="$ckdEtiology"  answerConceptId="$ckdEtiNephro" answerLabel="Nephrotic"  style="checkbox" /><br />
                                <obs conceptId="$ckdDrugsEti"  labelText="Drugs (specify)" /><br />
                                <obs conceptId="$ckdOtherEti"  labelText="Others (specify)" /><br />
                                <obs conceptId="$ckdEtiology"  answerConceptId="$ckdEtiOther" answerLabel="Others"  style="checkbox" /><br />
                                <obs conceptId="$ckdEtiology"  answerConceptId="$ckdEtiUknown" answerLabel="Unknown"  style="checkbox" /><br /><br />
                            </td>
                            <td class="toggle-target" rowspan="4">
                                <obs id="ckd-etiology-date" conceptId="$diagnosisDate" labelText="Date"/>
                            </td>

                            <!-- CHF -->
                            <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="chf-dx" data-toggle-target="chf-dx-date">
                                    <obs class="dx-checkbox-item" id="chf-dx" conceptId="$chronicCareDiagnosis" style="checkbox"
                                         answerConceptId="$chfDX" answerLabel="CHF" />
                                </td>
                                <td class="toggle-target">
                                    <obs id="chf-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
                        </tr>
                        <tr>
                            <!-- Hypertension -->
                            <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="htn-dx" data-toggle-target="htn-dx-date">
                                    <obs class="dx-checkbox-item" id="htn-dx" conceptId="$chronicCareDiagnosis" style="checkbox"
                                         answerConceptId="$hypertensionDx" answerLabel="Hypertension" />
                                </td>
                                <td class="toggle-target">
                                    <obs id="htn-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
                        </tr>
                        <tr>
                            <!-- Diabetes -->
                            <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="diabetes-dx" data-toggle-target="diabetes-dx-date">
                                    <obs class="dx-checkbox-item" id="diabetes-dx" conceptId="$chronicCareDiagnosis" style="checkbox"
                                         answerConceptId="$diabetesDx" answerLabel="Diabetes" />
                                </td>
                                <td class="toggle-target">
                                    <obs id="diabetes-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
                        </tr>
                        <tr>
                            <!-- Other -->
                            <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="other-dx" data-toggle-target="other-dx-date">
                                    <obs class="dx-checkbox-item" id="other-dx" conceptId="$chronicCareDiagnosis" style="checkbox"
                                         answerConceptId="$otherDx" answerLabel="Other (Stroke, COPD)" />
                                </td>
                                <td class="toggle-target">
                                    <obs id="other-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>

                        </tr>
                        <tr>
                            <th style="vertical-align:top;" align="left" rowspan="2">Patient<br/>History</th>
                            <td rowspan="2"><obs conceptId="$hivStatus" labelText="HIV" answerConceptIds="$reactive,$nonReactive"/>
                                <br/>
                                <obs conceptId="$hivTestDate" labelText="Date Test"/>
                            </td>
                            <td rowspan="2"><obs conceptId="$artStartDate" labelText="ART Start Date" /></td>
                            <td class="nowrap"><obs conceptId="$historyOfDialysis" labelText="History of Dialysis" /></td>
                            <td class="nowrap"><obs conceptId="$dateOfDialysis" labelText="Date"/></td>
                        </tr>
                        <tr>
                            <td class="nowrap">
                                <obs conceptId="$tbStatus" labelText="TB" answerConceptIds="$smearPos,$smearNeg,$eptb,$unknown"
                                     answerLabels="smear pos,smear neg,EPTB,never had TB"/></td>
                            <td class="nowrap">
                                <obs conceptId="$tbDate" labelText="Date"/>
                            </td>
                        </tr>

                        <tr>
                            <th style="vertical-align:top;" align="left">Outcome</th>
                            <td colspan="6">
                                <b>
                                    <lookup expression="fn.currentProgramWorkflowStatus(16).state.concept.name" />
                                    (<lookup expression="fn.currentProgramWorkflowStatus(16).startDate" />)
                                </b>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

        <ifMode mode="VIEW" include="false">
            <div id="buttons" style="margin-top:10px;">
                <button class="submitButton confirm" onclick="submitHtmlForm()">
                    <uimessage code="uicommons.save"/>
                    <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
                </button>
            </div>
        </ifMode>
    </div>
</htmlform>
