<htmlform formUuid="766c9554-e35b-11e8-9f32-f2801f1b9fd1"
          formName="NCD Other Quarterly Laboratory Tests"
          formEncounterType="b5622d4e-e335-11e8-9f32-f2801f1b9fd1" formVersion="1.0">

    <macros>
        <macro key="hivStatus" value="6567ae62-977f-11e1-8993-905e29aff6c1" />
        <macro key="reactive" value="65587802-977f-11e1-8993-905e29aff6c1" />
        <macro key="nReactive" value="6558791a-977f-11e1-8993-905e29aff6c1" />
        <macro key="unknown" value="65576584-977f-11e1-8993-905e29aff6c1" />
        <macro key="hba1clab" value="65714f76-977f-11e1-8993-905e29aff6c1" />
        <macro key="proteinuria" value="65717366-977f-11e1-8993-905e29aff6c1" />
        <macro key="negative" value="654994c2-977f-11e1-8993-905e29aff6c1" />
        <macro key="onePlus" value="65598fb2-977f-11e1-8993-905e29aff6c1" />
        <macro key="twoPlus" value="65597cde-977f-11e1-8993-905e29aff6c1" />
        <macro key="threePlus" value="65598706-977f-11e1-8993-905e29aff6c1" />
        <macro key="trace" value="65717366-977f-11e1-8993-905e29aff6c1" />
    </macros>

    <!-- Flowsheet table view -->
    <ifMode mode="VIEW" include="true">

        <table class="visit-table data-entry-table">
            <thead class="visit-table-header">
                <tr>
                    <th colspan="4">Screening Every 3 Months</th>
                </tr>
                <tr>
                    <th>Date</th>
                    <th>HbA1C</th>
                    <th>Proteinuria</th>
                    <th>HIV</th>
                </tr>
            </thead>
            <tbody class="visit-table-body">
                <tr class="visit-table-row">
                    <td class="nowrap visit-date">
                        <!-- Encounter Date -->
                        <encounterDate/>
                    </td>
                    <td>
                        <obs conceptId="$hba1clab"/>
                    </td>
                    <td>
                        <obs conceptId="$proteinuria" style="radio" answerConceptIds="$negative,$trace,$onePlus,$twoPlus,$threePlus" answerLabels="Negative,Trace,1+,2+,3+"/>
                    </td>
                    <td>
                        <obs conceptId="$hivStatus"/>
                    </td>
                </tr>
            </tbody>
        </table>

    </ifMode>

    <!-- Data entry view -->
    <ifMode mode="VIEW" include="false">

        <h4 style="font-style: italic;">
            <b>Screening Every 3 Months</b>
            <span style="padding-left:50px;">Version 1</span>

            <span style="padding-left:50px;">
                <b style="padding-right:10px;">NCD Reg no:</b>
                <b>
                    <lookup complexExpression="#foreach( $id in $patientIdentifiers.get(&quot;Chronic Care Number&quot;) ) $!id #end"/>
                </b>
            </span>
        </h4>

        <span style="display:none">
            <encounterProvider default="16576"/>
        </span> <!-- Set provider to a default as not used -->

        <table class="visit-edit-table">
            <tr>
                <th>Date</th>
                <td>
                    <encounterDate id="visitDate" default="today"/>
                </td>
            </tr>
            <tr>
                <th>Location</th>
                <td>
                    <encounterLocation id="visitLocation" />
                </td>
            </tr>

            <tr>
                <th>HbA1C</th>
                <td class="focus-field">
                    <obs conceptId="$hba1clab" showUnits="true"/>
                </td>
            </tr>

            <tr>
                <th>Proteinuria</th>
                <td>
                    <obs conceptId="$proteinuria" style="radio" answerConceptIds="$negative,$trace,$onePlus,$twoPlus,$threePlus" answerLabels="Negative,Trace,1+,2+,3+"/>
                </td>
            </tr>

            <tr>
                <th>HIV test</th>
                <td>
                    <obs conceptId="$hivStatus" answerConceptIds="$reactive,$nReactive,$unknown"/>
                </td>
            </tr>

        </table>

        <submit/>

    </ifMode>

</htmlform>
