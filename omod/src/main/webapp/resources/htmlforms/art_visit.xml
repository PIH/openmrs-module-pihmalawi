                        <td>             
                            <!-- # tablets -->
                            <obs conceptId="$hivPreventiveTherapyPills"/>
                        </td>
                    </obsgroup>
                    <td>
                        <!-- depo given -->
                        <obs conceptId="$depoGiven" style="checkbox" answerConceptId="$yes" answerLabel="" />
