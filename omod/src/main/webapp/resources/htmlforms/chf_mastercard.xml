                                </td>
                                <td>
                                    <obs id="cvdUn-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
        		 </tr>
                        <tr>
			     <!-- Rheumatic -->
			     <obsgroup groupingConceptId="$diagnosisSet">
