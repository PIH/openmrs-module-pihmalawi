                                    	<obs id="stroke-dx" conceptId="$chronicCareDiagnosis" style="checkbox" answerConceptId="$strokeDx" answerLabel="Stroke"/>
                                    </td>
                                    <td rowspan="2">
                                    	<obs id="stroke-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                    </td>
                             </obsgroup>

			     <!-- DVT -->
			     <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="dvt-dx" data-toggle-target="dvt-dx-date" rowspan="2">
                                    <obs id="dvt-dx" conceptId="$chronicCareDiagnosis" style="checkbox" answerConceptId="$dvThrombosis" answerLabel="DVT"/>
                                </td>
                                <td rowspan="2">
                                    <obs id="dvt-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
			 </tr>
			 <tr>
			    <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="cvdUn-dx" data-toggle-target="cvdUn-dx-date">
