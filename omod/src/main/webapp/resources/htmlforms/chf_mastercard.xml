                                    <obs id="dilated-dx" conceptId="$chronicCareDiagnosis" style="checkbox" answerConceptId="$dilatedCHF" answerLabel="Dilated"/>
                                </td>
                                <td>
                                    <obs id="dilated-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
			 
  			    <!-- CAD diagnosis and date -->
			    <obsgroup groupingConceptId="$diagnosisSet">
                                <td data-toggle-source="cad-dx" data-toggle-target="cad-dx-date" rowspan="2">
                                    <obs id="cad-dx" conceptId="$chronicCareDiagnosis" style="checkbox" answerConceptId="$cadDx" answerLabel="CAD"/>
                                </td>
                                <td rowspan="2">
                                    <obs id="cad-dx-date" conceptId="$diagnosisDate" labelText="Date"/>
                                </td>
                            </obsgroup>
			    <!-- PE --> 
